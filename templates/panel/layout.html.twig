<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <title>{% block title %}Panel administracyjny{% endblock %}</title>

    {% block stylesheets %}
        {{ encore_entry_link_tags('x-panel/admin') }}
    {% endblock %}
</head>
<body>
    <div class="container-fluid">

        <div class="row">
            <div class="col-2">
                <ul>
                    <li><a href="{{ path('panel.contest') }}">Konkurs</a></li>
                </ul>

                <ul>
                    <li><a href="{{ path('website.homepage') }}">Strona główna</a></li>
                    <li><a href="{{ path('website.user.logout') }}">Wyloguj</a></li>
                </ul>
            </div>

            <div class="col-10 pt-3">
            {% block content %}{% endblock %}
            </div>
        </div>

        {% block javascripts %}
            {{ encore_entry_script_tags('x-panel/admin') }}
        {% endblock %}
    </div>
</body>
</html>
